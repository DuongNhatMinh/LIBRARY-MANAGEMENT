<UserControl x:Class="Minh_C5_Assignment.ucAddUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Minh_C5_Assignment"
             mc:Ignorable="d" 
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="1"
                        BorderBrush="Black"
                        BorderThickness="2"
                        Margin="5 0 5 5"  
                          Header="User Information"
                          FontSize="18"
                          FontWeight="SemiBold">
                    <StackPanel Margin="5">
                        <Label Content="User Name: "
                               Name="lbUserName"
                               FontSize="14" FontWeight="SemiBold"
                               />
                        <TextBox Name="txtUserName"
                                 Text="{Binding LName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                 MaxLength="100" >
                        </TextBox>

                        <Label Content="Password: "
                               Name="lbPassword"
                               FontSize="14" FontWeight="SemiBold"
                               />
                        <TextBox Name="txtPassword"
                                 Text="{Binding FName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                MaxLength="20"/>


                        <Label Content="Last Name: "
                               Name="lbLName"
                               FontSize="14" FontWeight="SemiBold"
                               />
                        <TextBox Name="txtLName"
                                 Text="{Binding LName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                 MaxLength="100"
                                 PreviewTextInput="txtLName_PreviewTextInput" >
                        </TextBox>

                        <Label Content="First Name: "
                               Name="lbFName"
                               FontSize="14" FontWeight="SemiBold"
                               />
                        <TextBox Name="txtFName"
                                 Text="{Binding FName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                MaxLength="20"
                                 PreviewTextInput="txtLName_PreviewTextInput"/>

                        <Label Content="Address: "
                               FontSize="14" FontWeight="SemiBold"
                               />
                        <TextBox Name="txtAddress"/>

                        <!--<Label Content="City: "
                               FontSize="14" FontWeight="SemiBold"
                               />
                        <ComboBox Name="cbCity" />-->

                        <Label Content="Phone: "
                               Name="lbPhone"
                               FontSize="14" FontWeight="SemiBold"
                               />
                        <TextBox Name="txtPhone" 
                                 MaxLength="10"
                                 PreviewTextInput="txtPhone_PreviewTextInput"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Grid>

        <StackPanel HorizontalAlignment="Center" 
                    Orientation="Horizontal"
                    Grid.Row="1">
            <Button Content="Add" Width="320" Margin="10"
                    Name="btnAdd"
                    Click="btnAdd_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
